<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cartefact", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home", new { Area = "" }, new { })</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home", new { Area = "" }, new { })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { Area = "" }, new { })</li>
                    @if (PageData["credentials"].IsAdmin)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-user-md"></span> Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Persons", "Index", "Persons", new { Area = "Admin" }, new { })</li>
                                <li>@Html.ActionLink("Cars", "Index", "Cars", new { Area = "Admin" }, new { })</li>
                            </ul>
                        </li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink((string)PageData["credentials"].Name, "Index", "Profil", new { Area = "Me" }, new { })</li>
                        <li>@Html.ActionLink("Logout", "Index", "Logout", new { Area = "" }, new { })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", "Login", new { Area = "" }, new { })</li>
                        <li>@Html.ActionLink("Register", "Index", "Register", new { Area = "" }, new { })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                <a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/"><img alt="Licence Creative Commons" style="border-width:0" src="https://i.creativecommons.org/l/by-sa/4.0/80x15.png" /></a>
                <span xmlns:dct="http://purl.org/dc/terms/" href="http://purl.org/dc/dcmitype/Dataset" property="dct:title" rel="dct:type">Cartefact</span> de <a xmlns:cc="http://creativecommons.org/ns#" href="mailto:170535@supinfo.com" property="cc:attributionName" rel="cc:attributionURL">Julien GARDET</a> est mis à disposition selon les termes de la <a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/">licence Creative Commons Attribution -  Partage dans les Mêmes Conditions 4.0 International</a>.
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Script/js")
    @RenderSection("scripts", required: false)
</body>
</html>
